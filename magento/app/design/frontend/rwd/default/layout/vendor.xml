     <vendor_account translate="label">
        <label>Vendor My Account (All Pages)</label>
        <!--remove name="catalog.compare.sidebar"/>
        <remove name="sale.reorder.sidebar"/-->
        <!-- Mage_Customer -->
        <reference name="root">
            <action method="setTemplate"><template>page/2columns-left.phtml</template></action>
            <action method="addBodyClass"><class>vendor-account</class></action>
        </reference>

        <reference name="content">
            <block type="page/html_wrapper" name="my.account.wrapper" translate="label">
                <label>My Account Wrapper</label>
                <action method="setElementClass"><value>my-account</value></action>
            </block>
        </reference>

        <reference name="left_first">
            <block type="vendor/account_navigationproduct" name="vendor_account_navigationproduct" before="-" template="vendor/account/navigationproduct.phtml">
             <action method="addLink" translate="label" module="vendor"><name>create attribute</name><path>vendor/attribute/new</path><label>Create Attribute</label></action>
             <action method="addLink" translate="label" module="vendor"><name>attribute Grid</name><path>vendor/attribute</path><label>Manage Attribute </label></action>
              <action method="addLink" translate="label" module="vendor"><name>Create Product</name><path>vendor/product/new</path><label>Create Product</label></action>
              <action method="addLink" translate="label" module="vendor"><name>manage Product</name><path>vendor/product/</path><label>Manage Product</label></action>              
              <action method="addLink" translate="label" module="vendor"><name>create group</name><path>vendor/group/create</path><label>Create Group</label></action>
               <action method="addLink" translate="label" module="vendor"><name>Group Grid</name><path>vendor/group</path><label>Manage Group</label></action>
           </block>
            <block type="vendor/account_navigation" name="vendor_account_navigation" before="-" template="vendor/account/navigation.phtml">
                <action method="addLink" translate="label" module="vendor"><name>account</name><path>vendor/account/</path><label>Account Dashboard</label></action>
                <action method="addLink" translate="label" module="vendor"><name>account_edit</name><path>vendor/account/edit/</path><label>Account Information</label></action>
            </block>
        </reference>
       
    </vendor_account>


